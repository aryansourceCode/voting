
<html>
<head>
  <title>Candidate List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }
    .container {
      width: 90%;
      margin: 50px auto;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }
    .card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin: 20px;
      padding: 20px;
      width: 250px;
      text-align: center;
    }
    .card img {
      border-radius: 50%;
      width: 100px;
      height: 100px;
      margin-bottom: 15px;
    }
    .card h2 {
      margin: 10px 0;
      font-size: 1.5em;
      color: #333;
    }
    .card p {
      margin: 5px 0;
      color: #777;
    }
    .pagination {
      display: flex;
      justify-content: center;
      margin: 20px 0;
    }
    .pagination a {
      margin: 0 5px;
      padding: 10px 15px;
      background: #333;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
    }
    .pagination a.disabled {
      background: #bbb;
      pointer-events: none;
    }
    .pagination a.active {
      background: #4CAF50;
      pointer-events: none;
    }
    .search-box {
      text-align: center;
      margin: 20px 0;
    }
    .search-box input[type="text"] {
      padding: 10px;
      width: 300px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .search-box button {
      padding: 10px 20px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .vo{
      background-color: #4CAF50;
      color: aliceblue;

    }
  </style>
</head>
<body>
  <center><h1>CAST YOUR VOTE</h1></center>
  <div class="search-box">
    <form action="/candidate/candidates" method="get">
      <input type="text" name="search" placeholder="Search by name, constituency, etc." value="<%= searchQuery %>">
      <button type="submit">Search</button>
    </form>
  </div>
  <div class="container">
    <% if (candi && candi.length) { %>
      <% candi.forEach(user => { %>
        <div class="card">
          <img src="<%= user.f_image %>" alt="Profile Picture">
          <h2><%= user.name %></h2>
          <p><strong>Party:</strong> <%= user.party %></p>
          <p><strong>State:</strong> <%= user.state %></p>
          <p><strong>Constituency:</strong> <%= user.constituency %></p>
          <form action="/candidate/vote/<%= user.id %>" method="post" class="vote-form">
            <button class="vo" type="submit">Vote+</button>
          </form>
        </div>
      <% }) %>
    <% } else { %>
      <p>No candidates found.</p>
    <% } %>
  </div>
  <div class="pagination">
    <% if (currentPage > 1) { %>
      <a href="/candidate/candidates?page=<%= currentPage - 1 %>&search=<%= searchQuery %>">&laquo; Previous</a>
    <% } else { %>
      <a class="disabled">&laquo; Previous</a>
    <% } %>
    <a href="#" class="active"><%= currentPage %></a>
    <% if (currentPage < totalPages) { %>
      <a href="/candidate/candidates?page=<%= currentPage + 1 %>&search=<%= searchQuery %>">Next &raquo;</a>
    <% } else { %>
      <a class="disabled">Next &raquo;</a>
    <% } %>
  </div>

  <script>
    document.querySelectorAll('.vote-form').forEach(form => {
      form.addEventListener('submit', async function(event) {
        event.preventDefault();

        const candidateId = form.getAttribute('action').split('/').pop(); // Extract candidateId from form action URL
        const token = localStorage.getItem('token');

        if (!token) {
          alert('You need to log in to vote.');
          event.preventDefault(); // Prevent the form from being submitted
          window.location.href = '/login'; 
        }

        try {
          const response = await fetch(`/candidate/vote/${candidateId}`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': `Bearer ${token}`
            },
            body: JSON.stringify({ candidateId })
          });

          if (response.ok) {
            const data = await response.json();
            alert('Vote successful!');
          } else {
            const errorData = await response.json();
            alert(errorData.message || 'Sorry you have already voted.');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('An error occurred. Please try again.');
        }
      });
    });
  </script>
</body>
</html>
